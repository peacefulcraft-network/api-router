{
    "name": "ncsa/php-mvj",
    "version": "1.0.0",
    "description": "A PHP MVJ[son] framework for building RESTful APIs",
    "type": "library",
    "authors": [
        {
            "name": "NCSA Dev-Team",
            "email": "dev-team@ncsa.tech"
        }
    ],
    "autoload":{
        "psr-4":{
            "ncsa\\phpmvj\\":"src/"
        }
    },
    "archive": {
        "exclude": ["/test", "/scripts", "/.vscode", "/okteto.yml", "/.stignore"]
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "scripts": {
        "kube-dev:start": [
            "Composer\\Config::disableProcessTimeout",
            "/usr/local/bin/okteto up -f okteto.yml",
            "/usr/local/bin/okteto down -f okteto.yml"
        ],
        "kube-dev:stop": [
            "Composer\\Config::disableProcessTimeout",
            "/usr/local/bin/okteto down -f okteto.yml"
        ],
        "test:install-dependecies": [
            "Composer\\Config::disableProcessTimeout",
            "composer --working-dir=test/ install"
        ],
        "test:run": [
            "Composer\\Config::disableProcessTimeout",
            "test/scripts/run-tests.sh"
        ]
    }
}
