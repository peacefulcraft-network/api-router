{
    "name": "pcn/api-router",
    "version": "1.0.0",
    "description": "A PHP MVJ[son] framework for building RESTful APIs",
    "type": "library",
    "authors": [
        {
            "name": "PeacefulCraft Network",
            "email": "support@peacefulcraft.net"
        }
    ],
    "autoload":{
        "psr-4":{
            "net\\peacefulcraft\\apirouter\\":"src/"
        }
    },
    "archive": {
        "exclude": ["/test", "/scripts", "/.vscode", "/okteto.yml", "/.stignore"]
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0"
    },
    "scripts": {
        "kube-dev:start": [
            "Composer\\Config::disableProcessTimeout",
            "/usr/local/bin/okteto up -f okteto.yml",
            "/usr/local/bin/okteto down -f okteto.yml"
        ],
        "kube-dev:stop": [
            "Composer\\Config::disableProcessTimeout",
            "/usr/local/bin/okteto down -f okteto.yml"
        ],
        "test:install-dependencies": [
            "Composer\\Config::disableProcessTimeout",
            "composer --working-dir=test/ install"
        ],
        "test:run": [
            "Composer\\Config::disableProcessTimeout",
            "test/scripts/run-tests.sh"
        ]
    }
}
